<div class="mt-4" style="width: 98%;">
    <div class="mt-4 ms-4 d-flex align-items-center">
        <div class="d-flex align-items-center" style="position: relative;">
            <input class="searchFieldAdminPanel" type="text" placeholder="Search">
            <i class="bi bi-search"></i>
        </div>
        <a href="/account" class="accountBtn" style="width: 200px; margin-left: auto">Products</a>
    </div>
    <div class="mt-4 ms-2">
        <table class="table align-middle" style="text-align: center; vertical-align: middle;">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">img</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Amount</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody >
        {{#each products}}
            <tr class="productsRow">
                <th scope="row" style="width: 5%;">{{index @index}}</th>
                <td style="width: 5%;"><img src="{{this.image}}" alt="productImg" style="height: 100px"></td>
                <td style="width: 20%;">
                    <div id="productName" class="d-flex justify-content-center align-items-center" style="height: 100px; width: 100%" aria-valuetext="{{this.name}}">
                    </div>
                </td>
                <td style="width: 35%;">
                    <div id="productDescription" class="d-flex justify-content-center align-items-center" style="width: 100%; height: 100px;" aria-valuetext="{{this.description}}">
                    </div>
                </td>
                <td style="width: 10%;">${{this.price}}</td>
                <td style="width: 10%;">{{this.amount}}</td>
                <td style="width: 5%;">
                    <form id="restoreForm" action="/products/{{this._id}}/restore" method="post">
                        <button type="submit" class="btn btn-warning">Restore</button>
                    </form>
                </td>
            </tr>
        {{else}}
            <tr>
                <td colspan="9" class="text-center justify-content-center">
                    <h3 class="mb-4 mt-4">No deleted products found</h3>
                </td>
            </tr>
        {{/each}}
        </tbody>
        </table>
    </div>
</div>

<script src="/script/binPage.js"></script>
<div class="row purchase-history mt-4" style="width: 98%;">
    <div class="col-7">
        <div class="row mb-4">
            <div class="col-12 d-flex justify-content-start">
                <h1>Order History</h1>
            </div>
        </div>

        {{#each user.purchaseHistory}}
        <div class="row mb-4">
            <div class="col-2 d-flex justify-content-center">
                <div style="position: relative;">
                    <img src="{{this.image}}">
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary">
                        {{this.quantity}}
                    </span>
                </div>
            </div>
            <div class="col-8 d-flex align-items-center" style="font-weight: 600;">
                {{this.name}}
            </div>
            <div class="col-2 d-flex align-items-center justify-content-start">
                ${{calPrice this.price this.quantity}}
            </div>
        </div>

        {{else}}
        
        <div class="row">
            <div class="col-12 d-flex justify-content-start">
                <h3>You haven't placed any orders yet.</h3>
            </div>
        </div>

        {{/each}}
    </div>

    <div class="col-1"></div>

    <div class="col-4" style="min-height: 500px;">
        <div class="text-end">
            <p>Logged in as {{user.firstName}} / <button type="submit" form="logoutForm">Log out</button></p>
        </div>
        <div class="d-flex align-items-start justify-content-end flex-column" style="height: 50%;">
            <h2>Account Details</h2>
            <h3>{{user.firstName}} {{user.lastName}}</h3>
            <h3>{{user.email}}</h3>
        </div>
    </div>

</div>